@model IEnumerable<coursework_db_mvc_cf.Models.DB.Место_отдыха>

@{
    ViewBag.Title = "Index";
}

<h2>Список мест отдыха</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Адрес.Страна)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Название)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Адрес.Страна)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Название)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.ИД }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ИД })
        </td>
    </tr>
}

</table>
